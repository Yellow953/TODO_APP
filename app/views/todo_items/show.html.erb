<div class="m-2 p-2">
  <%= render @todo_item %>

  <div>
    <%= link_to "Edit this todo item", edit_todo_item_path(@todo_item), class:"btn btn-warning m-1" %> |
    <%= link_to "Back to todo items", todo_items_path, class:"btn btn-primary m-1" %>

    <%= button_to "Destroy this todo item", @todo_item, method: :delete, data: { turbo_confirm: 'Are you sure?' }, class:"btn btn-danger m-1" %>
  </div>
</div>